@page "/login"
@model SRSN.Admin.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">SRSN</h1>
            </div>
            <h3>Welcome to SRSN Admin</h3>
            <p>Login in. To see it in action.</p>
            <form class="m-t" role="form" method="post" id="login-form">
                <div class="form-group">
                    <input type="text" class="form-control" name="usernameVM" id="usernameVM" placeholder="Username" required="" />
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="" />
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
                <div class="text-center" id="area-error"></div>
            </form>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/Configuration.js"></script>
    <script src="~/js/site.js"></script>
    <script type="text/javascript">
        $("#login-form").on("submit", async function (e) {
            e.preventDefault();
            fetch(`${BASE_API_URL}/api/account/login`, {
                method: 'POST', // or 'PUT'
                body: JSON.stringify({
                    'usernameVM': $('#usernameVM').val(),
                    'password': $('#password').val(),
                }), // data can be `string` or {object}!
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(res => res.json()).then(response => {
                if (response.success) {
                    srsn.Utils.SetCurrentLogin(response.token, $("input[name=usernameVM]").val());
                    window.location.href = '/';
                } else {
                    var errorP = document.createElement("p");
                    errorP.append(response.message);
                    $("#area-error").html(errorP.outerHTML);
                }
            }).catch(function(error) {
                console.error('Error:', error)
            });
        });
    </script>
</body>
</html>